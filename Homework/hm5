/*
Write a program that reads a word and prints each character
of the word on a sepa- rate line. For example, if the user 
provides the input "Harry", the program prints
H 
a
r
r
y

*/
#include<iostream>
using namespace std;
int main ()
{
    string word;
    cout<<"Please enter a word: ";
    cin>>word;
    for(int i=0; i<word.length(); i++)
    {
        cout<<word[i]<<endl; 

    }




    return 0;
}
