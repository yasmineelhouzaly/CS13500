/*
Write a program that prints three items, such as the names 
of your three best friends or favorite movies, on three separate lines.
*/
#include<iostream>

using namespace std;
int main()
{
    string m1;
    cout<<"Please print the name of your first favorite movie: ";
    cin>>m1;
    string m2;
    cout<<"Please print the name of your second favorite movie: ";
    cin>>m2;
    string m3;
    cout<<"Please print the name of your third favorite movie: ";
    cin>>m3;
    cout<<m1<<endl<<m2<<endl<<m3<<endl;



    return 0;
}
